<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView android:id="@+id/store_logo"
        android:contentDescription="@string/store_logo"
        android:src="@mipmap/ic_default_store_image"
        android:scaleType="fitCenter"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/store_displayed"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/store_logo"
        android:layout_toRightOf="@+id/store_logo">

        <TextView android:id="@+id/store_phone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/store_phone"/>

        <TextView android:id="@+id/store_address"
            android:layout_below="@+id/store_phone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/store_displayed"/>

    </RelativeLayout>

</RelativeLayout>